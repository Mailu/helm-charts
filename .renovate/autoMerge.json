{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "description": "Auto-merge trusted GitHub Actions",
            "matchManagers": [
                "github-actions"
            ],
            "matchPackageNames": [
                "/^actions\//",
                "/^renovatebot\//"
            ],
            "automerge": true,
            "automergeType": "branch",
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "minimumReleaseAge": "1 minute",
            "ignoreTests": true
        },
        {
            "description": "Auto-merge Mailu GitHub Releases",
            "matchDatasources": [
                "github-releases"
            ],
            "automerge": true,
            "automergeType": "branch",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchPackageNames": [
                "/Mailu/"
            ],
            "ignoreTests": true
        }
    ]
}
