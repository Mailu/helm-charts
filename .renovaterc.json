{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    "github>Mailu/helm-charts//.renovate/autoMerge",
    "github>Mailu/helm-charts//.renovate/commitMessage",
    "github>Mailu/helm-charts//.renovate/customManagers",
    "github>Mailu/helm-charts//.renovate/labels",
    "github>Mailu/helm-charts//.renovate/semanticCommits",
    ":disableRateLimiting"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Helm Chart appVersion",
      "managerFilePatterns": [
        "//(^|/)Chart\\.yaml$//"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?appVersion:\\s*(?<currentValue>.*)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
